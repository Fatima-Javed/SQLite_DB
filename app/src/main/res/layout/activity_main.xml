<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/vb"
    tools:context=".MainActivity" >


    <TextView
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:height="0dp"
        android:background="#D0B3DF"
        android:ems="10"
        android:gravity="center"
        android:text="SELECT OPERATION"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />



    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:onClick="demo1"
        android:text="INSERT DATA"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:backgroundTint="#B859BA" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:onClick="demo2"
        android:text="SHOW DATA"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:backgroundTint="#B859BA" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:onClick="demo3"
        android:text="NUMBER OF ROWS"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:backgroundTint="#B859BA" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:onClick="demo4"
        android:text="UPDATE DATA"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:backgroundTint="#B859BA" />
</LinearLayout>



